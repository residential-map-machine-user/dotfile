{
  "env": {
    "jquery": true,
      "browser": true,
      "es6": true
  },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "space-in-parens": ["error", "never"],
      "indent": [2, 4, {
        'SwitchCase': 1,
      }],
      "key-spacing": [2, {
        "beforeColon": false,
        "afterColon" : true,
        "align"      : "colon"
      }],
      "space-before-blocks": "error",
      "space-before-function-paren": ["error", "never"],
      "keyword-spacing": ["error", { "before": true }],
    },
    "extends": "eslint:recommended"
}
